@page
@model AutoEscolaPDC.Pages.Alunos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Aluno</h4>
<hr />

<form method="post">
    <div class="row">
        <div class="col-md-8">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aluno.Nome" class="control-label"></label>
                <input asp-for="Aluno.Nome" class="form-control" />
                <span asp-validation-for="Aluno.Nome" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-2">

            <div class="form-group">
                <label asp-for="Aluno.Sexo" class="control-label"></label>
                <input asp-for="Aluno.Sexo" class="form-control" />
                <span asp-validation-for="Aluno.Sexo" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-2">

            <div class="form-group">
                <label asp-for="Aluno.Idade" class="control-label"></label>
                <input asp-for="Aluno.Idade" class="form-control" />
                <span asp-validation-for="Aluno.Idade" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <br />
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </div>
    <div>
        <a asp-page="Index">Voltar a lista</a>
    </div>

</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
